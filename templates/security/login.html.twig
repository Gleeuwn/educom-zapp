{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <input type="email" value="{{ last_username }}" placeholder="email" name="email" id="inputEmail" class="form-control formrond" autocomplete="email" required autofocus>
    <br><br>
    <input type="password" name="password" placeholder="wachtwoord" id="inputPassword" class="form-control formrond" autocomplete="current-password" required>
    <br><br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <button class="buttonlogin">
        Wachtwoord vergeten?
    </button>
    <button class="buttonlogin" type="submit">
        Login
    </button>
    
</form>
{% endblock %}
