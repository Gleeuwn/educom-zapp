    });

    $("#btn").click(function () {
        $(".popup1").fadeToggle();
        $(".popup").fadeOut(); 
    });

function saveFormData(formSelector, url) {
    var formData = $(formSelector).serialize();
    console.log(formData);

    $.ajax({
        type: "POST",
        url: url,
        data: formData,
        success: function (response) {
            console.log(response);
            location.reload(true);
        }
    });
}

$(document).on("click", "#save", function () {
    saveFormData("#bezoekForm, #klantForm, #medewerkerForm", "/save");
});

$(document).on("click", "#saveklant", function () {
    saveFormData("#klantbeheerform, #klanttoevoegform", "/saveklant");
});


    $(document).on("click", ".popup button[type='button']", function () {
        closePopup();
    });

    function closePopup() {
        $(".popup, .popup1").fadeOut();
    }
});
</script>
